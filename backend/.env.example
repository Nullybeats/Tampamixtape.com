# Server
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database (Render PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Admin Credentials (for initial admin login)
ADMIN_EMAIL=admin@tampamixtape.com
ADMIN_PASSWORD=your-secure-admin-password

# Spotify API - https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:5173/callback

# Genius API - https://genius.com/api-clients
GENIUS_CLIENT_ID=your_genius_client_id
GENIUS_CLIENT_SECRET=your_genius_client_secret
GENIUS_ACCESS_TOKEN=your_genius_access_token

# Discogs API - https://www.discogs.com/settings/developers
DISCOGS_TOKEN=your_discogs_token
DISCOGS_CONSUMER_KEY=your_discogs_consumer_key
DISCOGS_CONSUMER_SECRET=your_discogs_consumer_secret

# YouTube Data API - https://console.cloud.google.com/apis/library/youtube.googleapis.com
YOUTUBE_API_KEY=your_youtube_api_key

# Last.fm API - https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key
