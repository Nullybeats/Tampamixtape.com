generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String?  // Optional for managed profiles (admin-created)
  name          String?
  artistName    String?
  profileSlug   String?  @unique
  bio           String?
  avatar        String?
  role          Role     @default(USER)
  status        Status   @default(PENDING)
  region        String   @default("Tampa Bay")
  genres        String?  // Comma-separated genres
  popularity    Int      @default(0) // Cached Spotify popularity score (0-100)
  followers     Int      @default(0) // Cached Spotify follower count
  spotifyId     String?
  spotifyUrl    String?
  instagramUrl  String?
  twitterUrl    String?
  youtubeUrl    String?
  tiktokUrl     String?
  websiteUrl    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("users")
}

enum Role {
  USER
  ARTIST
  ADMIN
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

model Release {
  id           String   @id // Spotify album ID
  name         String
  type         String   // Album, Single, EP
  image        String?
  releaseDate  String?
  spotifyUrl   String?
  artistId     String   // Reference to User.id
  artistName   String
  artistSlug   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([artistId])
  @@index([releaseDate])
  @@map("releases")
}
